PORT=8080                      # Server port
NODE_ENV=development            # Environment

JWT_SECRET=super-secret-key     # JWT signing secret
JWT_EXPIRES_IN=1h               # JWT expiration
JWT_ISSUER=job-platform         # JWT issuer
JWT_AUDIENCE=job-platform-users # JWT audience

RATE_LIMIT_WINDOW_MS=60000      # Rate limit window (ms)
RATE_LIMIT_MAX=100              # Max requests per window per IP

CORS_ORIGIN=http://localhost:3000  # Allowed frontend origin

AUTH_SERVICE_URL=http://localhost:4000      # Auth service
JOB_SERVICE_URL=http://localhost:4001       # Job service
PROFILE_SERVICE_URL=http://localhost:4002   # Profile service
MESSAGING_SERVICE_URL=http://localhost:4003 # Messaging service
USER_SERVICE_URL=http://localhost:5000
